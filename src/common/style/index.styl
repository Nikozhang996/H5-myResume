
html {
  font-size: 100px
}

html, body {
  height: 100%
  overflow: hidden
  background-color: #666
}

.mainWrap {
  max-width: 640px
  height: 100%
  margin: 0 auto
  background-color: #fff
  overflow: hidden
}

.loadingBox, .phoneBox, .messageBox, .cubeBox, .detailBox {
  display: none
  position: relative
  height: 100%
  overflow: hidden
}

.loadingBox {
  //display: block
  background-color: #000
  .title {
    position: absolute
    top: 50%
    left: 0
    width: 100%
    height: 1.4rem
    margin-top: unit((-1.4 / 2) + (-1.5), rem)
    text-align: center
    color: #fff
    letter-spacing: .04rem
    h1 {
      line-height: .75rem
      font-size: .5rem
    }
    h2 {
      font-size: .26rem
      line-height: .45rem
      margin-top: .2rem
    }
  }

  .progress {
    position: absolute
    top: 50%
    left: 50%
    margin-left: unit(-4.6 / 2, rem)
    margin-top: unit(-.3 / 2 + 1, rem)
    width: 4.6rem
    height: .3rem
    background-color: #fff
    border-radius: unit(0.3 / 2, rem)
    .run {
      position: absolute
      width: 50%
      height 100%
      border-radius: unit(0.3 / 2, rem)
      transition :.3s
      background: -webkit-linear-gradient(left bottom,
      #2bb82e 0%,
      #2bb82e 25%,
      #74C274 25%,
      #74C274 50%,
      #2bb82e 50%,
      #2bb82e 75%,
      #74C274 75%,
      #74C274 100%
      )
      background-size: 0.3rem 0.3rem
      background-position: 0 0
      animation :loadingMove 1s linear infinite both;
    }
  }
}

  @keyframes loadingMove{
      0%{
        background-position: 0 0;
      }
    100%{
      background-position: 0 -.3rem;
    }
  }
