
html {
  font-size: 100px;
}

html, body {
  height: 100%;
  overflow: hidden;
  background-color: #666;
}

.mainWrap {
  max-width: 640px;
  height: 100%;
  margin: 0 auto;
  background-color: #fff;
  overflow: hidden;
}

.loadingBox, .phoneBox, .messageBox, .cubeBox, .detailBox {
  display: none;
  position: relative;
  height: 100%;
  overflow: hidden;
}

/* LOADINGBOX */
.loadingBox {
  // display: block
  background-color: #000;

  .title {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 1.4rem;
    margin-top: unit((-1.4 / 2) + -1.5, rem);
    text-align: center;
    color: #fff;
    letter-spacing: 0.04rem;

    h1 {
      line-height: 0.75rem;
      font-size: 0.5rem;
    }

    h2 {
      font-size: 0.26rem;
      line-height: 0.45rem;
      margin-top: 0.2rem;
    }
  }

  .progress {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: unit((-4.6 / 2), rem);
    margin-top: unit(-0.3 / 2 + 1, rem);
    width: 4.6rem;
    height: 0.3rem;
    background-color: #fff;
    border-radius: unit((0.3 / 2), rem);

    .run {
      position: absolute;
      // width: 50%;
      height: 100%;
      border-radius: unit((0.3 / 2), rem);
      transition: 0.3s;
      background: -webkit-linear-gradient(
        left bottom,
        #2bb82e 0%,
        #2bb82e 25%,
        #74C274 25%,
        #74C274 50%,
        #2bb82e 50%,
        #2bb82e 75%,
        #74C274 75%,
        #74C274 100%
      );
      background-size: 0.3rem 0.3rem;
      background-position: 0 0;
      animation: loadingMove 1s linear infinite both;
    }
  }
}

@keyframes loadingMove {
  0% {
    background-position: 0 0;
  }

  100% {
    background-position: 0 -0.3rem;
  }
}

/* phoneBox */
.phoneBox {
  background-image: url('../../assets/img/zf_phoneBg.jpg');
  background-size: cover;
  background-repeat: no-repeat;

  .header {
    position: absolute;
    top: 0.5rem;
    left: 50%;
    width: 2.62rem;
    margin-left: unit((-2.62 / 2), rem);

    .logo {
      display: block;
      width: 100%;
      height: 1.25rem;
    }

    .time {
      display: none;
      margin-top: 0.1rem;
      line-height: 0.3rem;
      text-align: center;
      color: #fff;
      font-size: 0.3rem;
      letter-spacing: 0.1rem;
    }
  }

  .listen {
    position: absolute;
    bottom: .3rem;
    left: 50%;
    margin-left: -2.6rem;
    width: 5.2rem;
    height: 3.6rem;
    background-image: url('../../assets/img/zf_phoneListen.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    //transform: translateY(6.89rem);
    //transition: all .5s;
    .touch,
    .move{
      box-sizing: border-box;
      position: absolute;
      right: -.06rem;
      bottom: .48rem;
      z-index: 5;
      width: 1.6rem;
      height: 1.6rem;
      border-radius: 50%;
    }
    .touch{
      z-index: -1;
      border: .03rem solid #0F0;
      animation: phoneMove 1s linear infinite both;
    }
  }

  .details{
    position: absolute;
    bottom: .3rem;
    left: 50%;
    margin-left: -2.6rem;
    width: 5.2rem;
    height: 6.59rem;
    background: url("../../assets/img/zf_phoneDetail.png") no-repeat;
    background-size: 100% 100%;
    transform: translateY(6.89rem);
    transition: all 1s;
    .touch{
      position: absolute;
      bottom: .28rem;
      left: 50%;
      z-index: 5;
      margin-left: -.8rem;
      width: 1.6rem;
      height: 1.6rem;
    }
  }
}
