
html {
  font-size: 100px
}

html, body {
  height: 100%
  overflow: hidden
  background-color: #666
}

.mainWrap {
  max-width: 640px
  height: 100%
  margin: 0 auto
  background-color: #fff
  overflow: hidden
}

.loadingBox, .phoneBox, .messageBox, .cubeBox, .detailBox {
  display: none
  position: relative
  height: 100%
  overflow: hidden
}

.loadingBox {
  display: block
  background-color: #000
  .title {
    position: absolute
    top: 50%
    left: 0
    width: 100%
    height: 1.4rem
    margin-top: unit((-1.4 / 2) + (-1.5), rem)
    text-align: center
    color: #fff
    letter-spacing: .04rem
    h1{
      line-height: .75rem
      font-size: .5rem
    }
    h2{
      font-size: .26rem
      line-height: .45rem
      margin-top: .2rem
    }
  }
}
